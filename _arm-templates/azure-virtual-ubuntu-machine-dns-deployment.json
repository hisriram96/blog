{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "region_name": {
            "type": "string",
            "defaultValue": "eastus",
            "metadata": {
                "description": "description"
            }
        },
        "virtual_network_name": {
            "type": "string",
            "defaultValue": "test-vnet",
            "metadata": {
                "description": "Name of the Virtual Network."
            }
        },
        "address_prefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "Address Prefix of the Virtual Network."
            }
        },
        "subnet_name": {
            "type": "string",
            "defaultValue": "test-subnet",
            "metadata": {
                "description": "Name of the Subnet."
            }
        },
        "subnet_address": {
            "type": "string",
            "defaultValue": "10.0.0.0/24",
            "metadata": {
                "description": "Address prefix of the Subnet."
            }
        },
        "dns_server_public_ip": {
            "type": "string",
            "defaultValue": "test-dns-public-ip",
            "metadata": {
                "description": "Name of the Public IP."
            }
        },
        "network_security_group_name": {
            "type": "string",
            "defaultValue": "test-nsg",
            "metadata": {
                "description": "Name of the NSG."
            }
        },
        "dns_server_name": {
            "type": "string",
            "defaultValue": "test-dns-server",
            "metadata": {
                "description": "Name of the Virtual Machine acting as DNS server."
            }
        },
        "virtual_machine_size": {
            "type": "string",
            "defaultValue": "Standard_B2s",
            "metadata": {
                "description": "Size/SKU of the Virtual Machine."
            }
        },
        "username": {
            "type": "string",
            "defaultValue": "microsoft",
            "metadata": {
                "description": "This is the username of the VM."
            }
        },
        "password": {
            "type": "string",
            "defaultValue": "Microsoft@123",
            "metadata": {
                "description": "This is the password of the VM."
            }
        },
        "os_disk_name": {
            "type": "string",
            "defaultValue": "test-dns-server-os-disk",
            "metadata": {
                "description": "Name of the OS disk of the VM."
            }
        },        
        "dns_server_nic": {
            "type": "string",
            "defaultValue": "test-dns-server-nic",
            "metadata": {
                "description": "Name of the Network Interface."
            }
        },
        "dns_server_private_ip": {
            "type": "string",
            "defaultValue": "10.0.0.4",
            "metadata": {
                "description": "IP address of the VM."
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('virtual_network_name')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-04-01",
            "location": "[parameters('region_name')]",
            "tags": {},
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('network_security_group_name'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": ["[parameters('address_prefix')]"]
                },
                "dhcpOptions": {
                    "dnsServers": [
                        "[parameters('dns_server_private_ip')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnet_name')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_address')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('network_security_group_name'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('dns_server_public_ip')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2023-04-01",
            "location": "[parameters('region_name')]",
            "tags": {},
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "name": "[parameters('network_security_group_name')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-04-01",
            "location": "[parameters('region_name')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "ssh",
                        "properties": {
                            "description": "Allow Inbound SSH Traffic.",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 2000,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "name": "[format(parameters('dns_server_nic'))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-04-01",
            "location": "[parameters('region_name')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('dns_server_public_ip'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtual_network_name'))]"
            ],
            "tags": {},
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig",
                        "properties": {
                            "primary": true,
                            "privateIPAllocationMethod": "Static",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('dns_server_public_ip'))]"
                            },
                            "privateIPAddress": "[parameters('dns_server_private_ip')]",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtual_network_name'), parameters('subnet_name'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[format(parameters('dns_server_name'))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-03-01",
            "location": "[parameters('region_name')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', parameters('dns_server_nic'))]"
            ],
            "tags": {},
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtual_machine_size')]"
                },
                "osProfile": {
                    "computerName": "[parameters('dns_server_name')]",
                    "adminUsername": "[parameters('username')]",
                    "adminPassword": "[parameters('password')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "canonical",
                        "offer": "0001-com-ubuntu-minimal-jammy",
                        "sku": "minimal-22_04-lts-gen2",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[parameters('os_disk_name')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('dns_server_nic'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                }
            }
        },
        {
            "name": "test-dns-client-nic",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-04-01",
            "location": "[parameters('region_name')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtual_network_name'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', parameters('dns_server_nic'))]"
            ],
            "tags": {},
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig",
                        "properties": {
                            "primary": true,
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtual_network_name'), parameters('subnet_name'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "test-dns-client",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-03-01",
            "location": "[parameters('region_name')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', 'test-dns-client-nic')]"
            ],
            "tags": {},
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtual_machine_size')]"
                },
                "osProfile": {
                    "computerName": "test-dns-client",
                    "adminUsername": "[parameters('username')]",
                    "adminPassword": "[parameters('password')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "canonical",
                        "offer": "0001-com-ubuntu-minimal-jammy",
                        "sku": "minimal-22_04-lts-gen2",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "test-dns-client-os-disk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'test-dns-client-nic')]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                }
            }
        }
    ],
    "outputs": {}
}
